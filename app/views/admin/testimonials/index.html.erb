<% title "Testimonials" %>

<table class="zebra" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th></th>
  </tr>
  <% for testimonial in @testimonials %>
    <tr>
      <td><%=h testimonial.name %></td>
      <td><%=h testimonial.content %></td>
      <td><%= link_to "Destroy", [:admin, testimonial], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @testimonials %>
