<% title "Questions in Quiz: #{@quiz.name}" %>

<table class="zebra" cellpadding="0" cellspacing="0">
  <tr>
    <th>Number</th>
    <th>Clues</th>
    <th>Answers</th>
    <th colspan="3"></th>
  </tr>
  <% @questions.each_with_index do |question, i| %>
    <tr>
      <td><%= i + (@per_page * (@page -1)) + 1 %></td>
      <td><%= link_to question.clues.collect(&:content).join(", "), admin_question_clues_path(question) %></td>
      <td><%= link_to question.answers.collect(&:content).join(", "), admin_question_answers_path(question)  %></td>
      <td><%= link_to "Show", [:admin, question] %></td>
      <td><%= link_to "Edit", edit_admin_question_path(question) %></td>
      <td><%= link_to "Destroy", [:admin, question], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<div style="margin-top:10px;"><%= will_paginate @questions %></div>

<p>
  <%= link_to "New Question", new_admin_quiz_question_path(@quiz), :class => "btn" %> 
  <%= link_to "Back to Quizzes", admin_quizzes_path, :class => "btn" %>
</p>
