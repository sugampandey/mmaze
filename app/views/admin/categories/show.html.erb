<% title "Category" %>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>
<p>
  <strong>Published:</strong>
  <%= @category.published %>
</p>

<p>
  <%= link_to "Edit", edit_admin_category_path(@category), :class => "btn" %>
  <%= link_to "Destroy", [:admin, @category], :confirm => 'Are you sure?', :method => :delete, :class => "btn" %>
  <%= link_to "View All", admin_categories_path, :class => "btn" %>
</p>
