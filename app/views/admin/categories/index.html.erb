<% title "Categories" %>

<table class="zebra" cellpadding="0" cellspacing="0">
  <tr>
    <th>Name</th>
    <th>Published</th>
    <th colspan="2"></th>
  </tr>
  <% for category in @categories %>
    <tr>
      <td><%= link_to category.name, [:admin, category] %></td>
      <td><%= category.published? ? "yes" : "no" %></td>
      <td><%= link_to "Edit", edit_admin_category_path(category) %></td>
      <td><%= link_to "Destroy", [:admin, category], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @categories %>

<p><%= link_to "New Category", new_admin_category_path, :class => "btn" %></p>
